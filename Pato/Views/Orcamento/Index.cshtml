@using Pato.Models
@{
    Layout = "/Views/Layout.cshtml";
    ViewBag.Title = "Orcamentos";
}

<nav class="navbar navbar-expand-lg">
</nav>
<ul class="nav justify-content-center">
<ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="/Orcamento" aria-current="page">Inicial</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Orcamento/Create">Cadastrar</a>
        </li>
</ul>
</ul>
<nav class="navbar navbar-expand-lg">
</nav>
<ul class="nav justify-content-center">
    <div class="card border-secondary mb-3">
        <div class="card-body text-secondary">
            <table class="table table-striped">
    <tr>
        <th>Data</th>
        <th>Valor Líquido</th>
        <th>Valor Bruto</th>
        <th>Ações</th>
    </tr>
    @foreach(Orcamento o in Model)
    {
    <tr>
        <td>@o.Data</td>
        <td>@o.valorLiquido</td>
        <td>@o.valorBruto</td>
        <td>
            <a href="/ProdutoOrcamento/Create/@o.IdOrcamento">Cadastrar Produto |</a>
            <a href="/Orcamento/Delete/@o.IdOrcamento">Apagar |</a>
            <a href="/Orcamento/Update/@o.IdOrcamento">Editar</a>
        </td>
    </tr>
    }
</table>
        </div>
    </div>
</ul>

</div>
